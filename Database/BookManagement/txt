6.conn.php


<?php
	$servername='localhost';
	$username='root';
	$password='';
	$dbname = "abhimanyu";

	$conn=mysqli_connect($servername,$username,$password,$dbname);
	if(!$conn){
   		die('Could not Connect My Sql:' .mysql_error());

	}
	else
	{
 		echo "Database connected";
	}
	?>
